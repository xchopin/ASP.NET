@{

    ViewBag.Title = "Home Page";

}

@using System.Xml;

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h3 class="text-center">Quick search</h3>
            <form id="search" method="POST" action='@Url.Action("SearchProduct")'>
                <div class="input-group">
                    <input name='productId' type="text" class="form-control" placeholder="Search a product by its ID">
                    <div class="input-group-btn">
                        <button class="btn btn-default" type="submit">
                            <i class="glyphicon glyphicon-search"></i>
                        </button>
                    </div>
                </div>
            </form>
            <h3 class="text-center">
                Markets
            </h3>
            <hr>
            @foreach (XmlNode market in ViewBag.markets)
            {
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-6">
                    <div class="dummy"></div>
                    <a href='market/@market.Attributes["id"].Value' class="thumbnail">
                        <i class="@market.SelectSingleNode("logo").InnerText"></i> <br><br>
                        <p>@market.SelectSingleNode("name").InnerText</p>
                    </a>
                </div>
            }
        </div>
    </div>
</div>